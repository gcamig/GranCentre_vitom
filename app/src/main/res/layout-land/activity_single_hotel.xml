<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleHotel"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="80dp">
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/hotel_img"
                android:padding="5dp"
                android:contentDescription="Logo Hotel"
                android:backgroundTint="@color/white"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="3dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/hotel_nom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="30sp"></TextView>

                <TextView
                    android:id="@+id/hotel_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 estrellas"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/hotel_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telefono de contacto"
                    android:textSize="20sp"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginTop="5dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/call_hotel"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:src="@drawable/call"
                    android:background="#254441"
                    android:layout_marginHorizontal="10dp"
                    android:contentDescription="Botón Llamar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trucar"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/web_hotel"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:src="@drawable/web"
                    android:background="#254441"
                    android:layout_marginHorizontal="10dp"
                    android:contentDescription="Botón WebSite"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pàgina Web"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/ubi_hotel"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:src="@drawable/map"
                    android:background="#254441"
                    android:layout_marginHorizontal="10dp"
                    android:contentDescription="Botón Mapa"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubicació"
                    android:textSize="20sp"/>
            </LinearLayout>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:background="@color/white">
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:isIndicator="false"
                    android:background="@color/white"
                    />

                <EditText
                    android:id="@+id/editTextComment"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="4dp"
                    android:hint="@string/deixa_el_teu_comentari"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:gravity="center"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:id="@+id/btEnviarComent"
                    android:text="Enviar Ressenya"
                    android:backgroundTint="@color/green"
                    android:layout_marginTop="2dp"
                    android:gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</ScrollView>