<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SingleBusiness">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="80dp">

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/businessImg"
                android:padding="5dp"
                />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TableRow>

                    <TextView
                        android:id="@+id/businessName"
                        android:layout_width="225dp"
                        android:layout_height="40dp"
                        android:text="Nombre"
                        android:textSize="30sp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/imgWheelchair"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/businessCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Categoria"
                        android:textSize="20sp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/businessTlf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Telefono de contacto"
                        android:textSize="20sp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/businessUrl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Url"
                        android:textSize="20sp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TableRow android:layout_marginVertical="20dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageButton
                            android:id="@+id/callBusiness"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:src="@drawable/call"
                            android:background="#254441"
                            android:layout_marginHorizontal="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trucar"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageButton
                            android:id="@+id/webBusiness"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:src="@drawable/web"
                            android:background="#254441"
                            android:layout_marginHorizontal="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pàgina Web"
                            android:textSize="20sp"/>
                    </LinearLayout>
                </TableRow>
                <TableRow>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageButton
                            android:id="@+id/ubiBusiness"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:src="@drawable/map"
                            android:background="#254441"
                            android:layout_marginHorizontal="10dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ubicació"
                            android:textSize="20sp"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
            <TextView
                android:id="@+id/businessUbi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="enlace ubicacion"
                android:textSize="20sp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>